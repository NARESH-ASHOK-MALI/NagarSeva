<% layout('layouts/boilerplate') -%>
<div class="admin-container">
  <div class="admin-card">
    <div class="admin-header">
      <i class="fas fa-shield-alt admin-icon"></i>
      <h2 class="admin-title">Admin Login</h2>
      <p class="admin-subtitle">Access the administrative dashboard</p>
    </div>
    <form action="/admin/login" method="POST" class="admin-form">
      <div class="form-group">
        <label class="form-label">Username</label>
        <input type="text" name="username" class="form-control" required />
      </div>
      <div class="form-group">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control" required />
      </div>
      <button class="btn btn-primary admin-btn">Login</button>
    </form>
  </div>
</div>


