<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 id="cmp" class="text-center mb-4">Log In to NagarSeva</h3>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <div class="mb-3">
                <label for="username" class="form-label" id="cmp">Username</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label" id="cmp">Password</label>
                <div class="password-input-wrapper">
                    <input type="password" id="password" name="password" class="form-control password-input" required>
                    <button class="password-toggle-btn" type="button" data-target="password">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label" id="cmp">Login As</label>
                <div class="role-selection-container">
                    <div class="role-card" data-role="user">
                        <div class="role-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <h5>User</h5>
                        <p>Register and track complaints</p>
                        <div class="role-indicator"></div>
                    </div>
                    <div class="role-card" data-role="admin">
                        <div class="role-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h5>Admin</h5>
                        <p>Manage and verify complaints</p>
                        <div class="role-indicator"></div>
                    </div>
                </div>
                <input type="hidden" name="loginType" id="selectedRole" value="user">
            </div>

            <div class="text-center">
                <button class="btn btn-success btn-lg px-5" id="cmp">Log In</button>
            </div>
        </form>
    </div>
</div>

<style>
.password-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.password-input {
    padding-right: 50px !important;
}

.password-toggle-btn {
    position: absolute;
    right: 10px;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
    z-index: 10;
}

.password-toggle-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.password-toggle-btn:focus {
    outline: none;
    color: #28a745;
    background: rgba(40, 167, 69, 0.1);
}

.password-toggle-btn i {
    font-size: 14px;
}

.role-selection-container {
    display: flex;
    gap: 20px;
    margin-top: 15px;
    justify-content: center;
}

.role-card {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    padding: 25px 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    width: 180px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}

.role-card:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.role-card.selected {
    border-color: #28a745;
    background: rgba(40, 167, 69, 0.2);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
}

.role-icon {
    font-size: 3rem;
    margin-bottom: 15px;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.3s ease;
}

.role-card.selected .role-icon {
    color: #28a745;
}

.role-card h5 {
    color: white;
    margin-bottom: 8px;
    font-weight: 600;
}

.role-card p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    margin-bottom: 0;
}

.role-indicator {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.role-card.selected .role-indicator {
    background: #28a745;
    border-color: #28a745;
}

.role-card.selected .role-indicator::after {
    content: 'âœ“';
    color: white;
    font-size: 12px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* Unique styling for admin card - Cool yellowish effect */
.role-card[data-role="admin"] {
    background: rgba(255, 193, 7, 0.1);
    border-color: rgba(255, 193, 7, 0.3);
}

.role-card[data-role="admin"]:hover {
    border-color: rgba(255, 193, 7, 0.5);
}

.role-card[data-role="admin"].selected {
    border-color: #ffc107;
    background: rgba(255, 193, 7, 0.2);
    box-shadow: 0 8px 20px rgba(255, 193, 7, 0.3);
}

.role-card[data-role="admin"].selected .role-icon {
    color: #ffc107;
}

.role-card[data-role="admin"].selected .role-indicator {
    background: #ffc107;
    border-color: #ffc107;
}

@media (max-width: 768px) {
    .role-selection-container {
        flex-direction: column;
        align-items: center;
    }
    
    .role-card {
        width: 100%;
        max-width: 250px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleCards = document.querySelectorAll('.role-card');
    const hiddenInput = document.getElementById('selectedRole');
    
    // Set default selection
    roleCards[0].classList.add('selected');
    
    roleCards.forEach(card => {
        card.addEventListener('click', function() {
            // Remove selected class from all cards
            roleCards.forEach(c => c.classList.remove('selected'));
            
            // Add selected class to clicked card
            this.classList.add('selected');
            
            // Update hidden input value
            hiddenInput.value = this.dataset.role;
        });
    });

    // Password toggle functionality
    document.querySelectorAll('.password-toggle-btn').forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const passwordInput = document.getElementById(targetId);
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    });
});
</script>