<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 id="cmp" class="text-center mb-4">Sign Up to NagarSeva</h3>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <div class="mb-3">
                <label for="username" class="form-label" id="cmp">Username</label>
                <input type="text" id="username" name="username" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label" id="cmp">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label" id="cmp">Password</label>
                <div class="password-input-wrapper">
                    <input type="password" id="password" name="password" class="form-control password-input" required>
                    <button class="password-toggle-btn" type="button" data-target="password">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <div class="password-requirements mt-2">
                    <small class="text-muted">
                        <div class="requirement" id="length-req">
                            <i class="fas fa-times text-danger"></i> At least 8 characters
                        </div>
                        <div class="requirement" id="lowercase-req">
                            <i class="fas fa-times text-danger"></i> One lowercase letter
                        </div>
                        <div class="requirement" id="uppercase-req">
                            <i class="fas fa-times text-danger"></i> One uppercase letter
                        </div>
                        <div class="requirement" id="number-req">
                            <i class="fas fa-times text-danger"></i> One number
                        </div>
                        <div class="requirement" id="special-req">
                            <i class="fas fa-times text-danger"></i> One special character (@$!%*?&)
                        </div>
                        <div class="mt-2 text-warning">
                            <i class="fas fa-shield-alt"></i> <strong>Security Tip:</strong> Avoid common passwords like "password123", "admin", or personal information to protect against data breaches.
                        </div>
                    </small>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label" id="cmp">Sign Up As</label>
                <div class="role-selection-container">
                    <div class="role-card" data-role="user">
                        <div class="role-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <h5>User</h5>
                        <p>Register and track complaints</p>
                        <div class="role-badge">Citizen</div>
                        <div class="role-indicator"></div>
                    </div>
                    <div class="role-card" data-role="admin">
                        <div class="role-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <h5>Admin</h5>
                        <p>Manage and verify complaints</p>
                        <div class="role-badge">Authority</div>
                        <div class="role-indicator"></div>
                    </div>
                </div>
                <input type="hidden" name="signupType" id="selectedSignupRole" value="user">
            </div>

            <div class="text-center">
                <button class="btn btn-success btn-lg px-5">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<style>
.password-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.password-input {
    padding-right: 50px !important;
}

.password-toggle-btn {
    position: absolute;
    right: 10px;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
    z-index: 10;
}

.password-toggle-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
}

.password-toggle-btn:focus {
    outline: none;
    color: #28a745;
    background: rgba(40, 167, 69, 0.1);
}

.password-toggle-btn i {
    font-size: 14px;
}

.password-requirements {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.requirement {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    margin-bottom: 4px;
}

.requirement:last-child {
    margin-bottom: 0;
}

.requirement i {
    width: 12px;
    text-align: center;
}

.requirement.valid i {
    color: #28a745 !important;
}

.requirement.valid {
    color: #28a745;
}

.role-selection-container {
    display: flex;
    gap: 20px;
    margin-top: 15px;
    justify-content: center;
}

.role-card {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    padding: 25px 20px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    width: 180px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}

.role-card:hover {
    transform: translateY(-5px);
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.role-card.selected {
    border-color: #28a745;
    background: rgba(40, 167, 69, 0.2);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
}

.role-icon {
    font-size: 3rem;
    margin-bottom: 15px;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.3s ease;
}

.role-card.selected .role-icon {
    color: #28a745;
}

.role-card h5 {
    color: white;
    margin-bottom: 8px;
    font-weight: 600;
}

.role-card p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.role-badge {
    background: rgba(255, 255, 255, 0.2);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.8);
    display: inline-block;
    margin-bottom: 0;
    transition: all 0.3s ease;
}

.role-card.selected .role-badge {
    background: rgba(40, 167, 69, 0.3);
    color: #28a745;
}

.role-indicator {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.role-card.selected .role-indicator {
    background: #28a745;
    border-color: #28a745;
}

.role-card.selected .role-indicator::after {
    content: 'âœ“';
    color: white;
    font-size: 12px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

/* Unique styling for admin card */
.role-card[data-role="admin"] {
    background: rgba(255, 193, 7, 0.1);
    border-color: rgba(255, 193, 7, 0.3);
}

.role-card[data-role="admin"]:hover {
    border-color: rgba(255, 193, 7, 0.5);
}

.role-card[data-role="admin"].selected {
    border-color: #ffc107;
    background: rgba(255, 193, 7, 0.2);
    box-shadow: 0 8px 20px rgba(255, 193, 7, 0.3);
}

.role-card[data-role="admin"].selected .role-icon {
    color: #ffc107;
}

.role-card[data-role="admin"].selected .role-indicator {
    background: #ffc107;
    border-color: #ffc107;
}

.role-card[data-role="admin"].selected .role-badge {
    background: rgba(255, 193, 7, 0.3);
    color: #ffc107;
}

@media (max-width: 768px) {
    .role-selection-container {
        flex-direction: column;
        align-items: center;
    }
    
    .role-card {
        width: 100%;
        max-width: 250px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleCards = document.querySelectorAll('.role-card');
    const hiddenInput = document.getElementById('selectedSignupRole');
    
    // Set default selection
    roleCards[0].classList.add('selected');
    
    roleCards.forEach(card => {
        card.addEventListener('click', function() {
            // Remove selected class from all cards
            roleCards.forEach(c => c.classList.remove('selected'));
            
            // Add selected class to clicked card
            this.classList.add('selected');
            
            // Update hidden input value
            hiddenInput.value = this.dataset.role;
        });
    });

    // Password toggle functionality
    document.querySelectorAll('.password-toggle-btn').forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const passwordInput = document.getElementById(targetId);
            const icon = this.querySelector('i');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    });

    // Real-time password validation
    const passwordInput = document.getElementById('password');
    if (passwordInput) {
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            
            // Check length requirement
            const lengthReq = document.getElementById('length-req');
            updateRequirement(lengthReq, password.length >= 8);
            
            // Check lowercase requirement
            const lowercaseReq = document.getElementById('lowercase-req');
            updateRequirement(lowercaseReq, /[a-z]/.test(password));
            
            // Check uppercase requirement
            const uppercaseReq = document.getElementById('uppercase-req');
            updateRequirement(uppercaseReq, /[A-Z]/.test(password));
            
            // Check number requirement
            const numberReq = document.getElementById('number-req');
            updateRequirement(numberReq, /\d/.test(password));
            
            // Check special character requirement
            const specialReq = document.getElementById('special-req');
            updateRequirement(specialReq, /[@$!%*?&]/.test(password));
        });
    }
    
    function updateRequirement(element, isValid) {
        const icon = element.querySelector('i');
        if (isValid) {
            element.classList.add('valid');
            icon.classList.remove('fa-times', 'text-danger');
            icon.classList.add('fa-check', 'text-success');
        } else {
            element.classList.remove('valid');
            icon.classList.remove('fa-check', 'text-success');
            icon.classList.add('fa-times', 'text-danger');
        }
    }
});
</script>