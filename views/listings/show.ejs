<% layout('layouts/boilerplate') -%>
<div class="row mb-3">
  <div class="col-8 offset-2">
    <h3 id="cmp">Complaint Details:</h3>

    <div class="card">
      <img
        src="<%= listing.image %>"
        alt="<%= listing.title %>"
        class="card-img-top show-img"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %> <br />

          <i class="fa-solid fa-calendar-days"></i> 
          <%= listing.date.toLocaleDateString("en-IN") %> <br />

          <i class="fa-solid fa-location-dot"></i> 
          <%= listing.address || 'Location' %>, <%= listing.city %>
        </p>
      </div>
    </div>
    <div class="card p-3 mt-3">
      <h5 id="cmp">Complaint Status</h5>
      <% if (!listing.tracking || listing.tracking.length === 0) { %>
        <div class="text-muted">No updates yet. Pending Verification.</div>
      <% } else { %>
        <ul class="timeline">
        <% listing.tracking.forEach(function(step){ %>
          <li>
            <span class="status"><%= step.status %></span>
            <span class="date"><%= new Date(step.updatedAt).toLocaleDateString('en-IN') %></span>
            <% if (step.notes) { %>
              <div class="notes"><%= step.notes %></div>
            <% } %>
          </li>
        <% }) %>
        </ul>
      <% } %>
      <% if (listing.assignedAuthority) { %>
        <div class="small">Assigned Authority: <b><%= listing.assignedAuthority %></b></div>
      <% } %>
    </div>
    <div class="mt-3">
    <h5 id="cmp">Reports: <%= listing.reports.length %></h5>
    <% if (currentUser) { %>
        <form action="/listings/<%= listing._id %>/report" method="POST">
            <% const hasReported = listing.reports.includes(currentUser._id); %>
            <button class="btn <%= hasReported ? 'btn-danger' : 'btn-primary' %>">
                <%= hasReported ? 'Un-report' : 'Endorse / Report' %>
            </button>
        </form>
    <% } %>
</div>

   
    

      <% if (currentUser && listing.author.equals(currentUser._id)) { %>
          <div class="btns mt-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn edit" >Edit</a>
            
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark delete">Complaint resolved</button>
            </form>
          </div>
      <% } %>
    </div>
  </div>
</div>